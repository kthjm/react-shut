{
  "name": "react-slidelay",
  "version": "0.0.0",
  "description": "",
  "main": "./lib/index.js",
  "repository": "kthjm/react-slidelay",
  "author": "kthjm <toxictoxer@gmail.com>",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "pretest": "flow",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "yarn test",
    "build": "cross-env NODE_ENV=build babel ./src -d ./lib",
    "postbuild": "run-s format copy",
    "format": "prettier --write **/*.js package.json",
    "copy": "flow-copy-source --verbose ./src ./lib"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "flow-bin": "^0.57.3",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.1",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.1.0",
    "power-assert": "^1.4.4",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rewire": "^2.5.2",
    "sinon": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "babel": {
    "env": {
      "build": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": ["last 2 versions", "safari >= 7"]
              },
              "debug": true
            }
          ],
          "flow",
          "react"
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": ["last 2 versions"]
              },
              "debug": true
            }
          ],
          "flow",
          "react"
        ],
        "plugins": [
          "istanbul",
          "rewire",
          ["espower", { "embedAst": true }],
          "empower-assert"
        ]
      }
    }
  },
  "nyc": {
    "require": ["babel-register", "jsdom-global/register"],
    "include": ["src"],
    "sourceMap": false,
    "instrument": false
  }
}
